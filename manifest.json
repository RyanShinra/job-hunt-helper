{
  "manifest_version": 3,
  "name": "Job Hunt Assistant",
  "version": "1.0.0",
  "description": "Analyze job postings using Claude AI to help with your job search",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://boards.greenhouse.io/*",
        "*://jobs.lever.co/*"
      ],
      "js": ["lib/extractor.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "*://*.linkedin.com/jobs/*",
    "*://boards.greenhouse.io/*",
    "*://jobs.lever.co/*",
    "https://api.anthropic.com/*"
  ]
}
